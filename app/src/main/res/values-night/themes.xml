<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalendarNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_200</item>
        <item name="colorPrimaryVariant">@color/pink_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_purple_200</item>
        <item name="colorSecondaryVariant">@color/deep_purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_size_16sp">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="text_size_18sp">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="text_size_20sp">
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="text_size_16sp_bold">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="text_size_18sp_bold">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="text_size_20sp_bold">
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="text_size_20sp_bold_cla">
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:minWidth">55dp</item>
        <item name="android:minHeight">55dp</item>
    </style>

</resources>